{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/convex/*": [
        "convex/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "src-backup"
  ]
}
